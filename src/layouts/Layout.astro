---

import NavBar from '@/components/Navbar.tsx'

import '../styles/global.css'
import ProfileWrapper from '@/components/wrapper/profileWrapper.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Ariyan</title>
	</head>
	<body  class="bg-black flex gap-[2rem] pt-[3rem] justify-center">
        
        <div class="bg-neutral-900 h-[35rem] w-[15rem] border-1 border-neutral-700 rounded-md">
            <ProfileWrapper />
        </div>
        <div class="bg-neutral-900 w-[50rem] min-h-fit  border-1 border-neutral-700 rounded-md">
			<NavBar client:load/>
			<div class="px-[1rem] py-[2rem]">
				<slot />
			</div>
        </div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>